<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Override Sales Order form to force full creation of customers (partners).
        This ensures mandatory demographic fields are not skipped via "Quick Create".
    -->
    <record id="view_order_form_inherit_partner_create" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.partner.create</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <!-- Disable quick create to force opening the full form -->
                <attribute name="options">{'always_reload': True, 'no_quick_create': True, 'no_create_edit': False}</attribute>
                <!-- Add context to show necessary fields if they depend on context -->
                <attribute name="context">{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
