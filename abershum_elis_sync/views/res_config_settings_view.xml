<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_abershum_elis_sync" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.abershum.elis.sync</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="1"/>
        <field name="inherit_id" ref="bahmni_sale.res_config_settings_view_form_i"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='bahmni-custom-configs']" position="inside">
                <div class="row mt16 o_settings_container" name="abershum_elis_sync_configurations">
                    <h2 style="text-align: center;">OpenELIS Integration</h2>
                    <div class="col-12 col-lg-6 o_setting_box" id="openelis_sync_enable">
                        <div class="o_setting_left_pane">
                            <field name="enable_openelis_sync"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_openelis_sync" string="Enable Test Order Sync"/>
                            <div class="text-muted col-md-12">
                                Enable automatic sync of lab test orders to OpenELIS when sale orders are confirmed
                            </div>
                            <div class="content-group" attrs="{'invisible': [('enable_openelis_sync', '=', False)]}">
                                <div class="row mt16" id="openelis_api_url_row">
                                    <label for="openelis_api_url" class="col-lg-3" string="OpenELIS API URL"/>
                                    <field name="openelis_api_url" placeholder="e.g. http://openelis:8052/openelis"/>
                                </div>
                                <div class="row mt16" id="openelis_api_username_row">
                                    <label for="openelis_api_username" class="col-lg-3" string="OpenELIS API Username"/>
                                    <field name="openelis_api_username" placeholder="e.g. admin"/>
                                </div>
                                <div class="row mt16" id="openelis_api_password_row">
                                    <label for="openelis_api_password" class="col-lg-3" string="OpenELIS API Password"/>
                                    <field name="openelis_api_password" password="True" placeholder="e.g. password"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="openelis_patient_sync_enable">
                        <div class="o_setting_left_pane">
                            <field name="enable_patient_sync"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_patient_sync" string="Enable Patient Sync"/>
                            <div class="text-muted col-md-12">
                                Enable automatic sync of patient data to OpenELIS when customers are created or updated
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
