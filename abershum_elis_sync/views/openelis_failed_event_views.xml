<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_openelis_failed_event_tree" model="ir.ui.view">
        <field name="name">openelis.failed.event.tree</field>
        <field name="model">openelis.failed.event</field>
        <field name="arch" type="xml">
            <tree string="Failed Events" decoration-danger="state == 'failed'" decoration-warning="sequence_number == 0" decoration-info="state == 'pending' or state == 'retrying'" decoration-success="state == 'success'" create="0" edit="0">
                <field name="sequence_number" readonly="1"/>
                <field name="display_name" readonly="1"/>
                <field name="event_type" readonly="1"/>
                <field name="partner_ref" readonly="1"/>
                <field name="sale_order_id" readonly="1"/>
                <field name="state" readonly="1"/>
                <field name="retry_count" readonly="1"/>
                <field name="error_type" readonly="1"/>
                <field name="create_date" readonly="1"/>
                <field name="last_retry_date" readonly="1"/>
                <button name="action_retry" string="Retry" type="object" 
                        attrs="{'invisible': [('state', '=', 'success')]}" 
                        class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record id="view_openelis_failed_event_form" model="ir.ui.view">
        <field name="name">openelis.failed.event.form</field>
        <field name="model">openelis.failed.event</field>
        <field name="arch" type="xml">
            <form string="Failed Event" create="0" edit="0">
                <header>
                    <button name="action_retry" string="Retry" type="object" class="btn-primary" 
                            attrs="{'invisible': [('state', '=', 'success')]}"/>
                    <button name="action_mark_success" string="Mark as Success" type="object" 
                            attrs="{'invisible': [('state', '=', 'success')]}"/>
                    <button name="action_delete" string="Delete" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,retrying,success" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="sequence_number" readonly="1"/>
                            <field name="event_type" readonly="1"/>
                            <field name="partner_id" attrs="{'invisible': [('event_type', '!=', 'patient')]}" readonly="1"/>
                            <field name="partner_ref" attrs="{'invisible': [('event_type', '!=', 'patient')]}" readonly="1"/>
                            <field name="sale_order_id" attrs="{'invisible': [('event_type', '!=', 'test_order')]}" readonly="1"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="retry_count" readonly="1"/>
                            <field name="error_type" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="last_retry_date" readonly="1"/>
                            <field name="next_retry_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Error Details">
                            <group>
                                <field name="error_message" nolabel="1" widget="text" readonly="1"/>
                            </group>
                        </page>
                        <page string="Payload">
                            <group>
                                <field name="payload" nolabel="1" widget="text" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_openelis_failed_event_search" model="ir.ui.view">
        <field name="name">openelis.failed.event.search</field>
        <field name="model">openelis.failed.event</field>
        <field name="arch" type="xml">
            <search string="Failed Events">
                <field name="sequence_number"/>
                <field name="display_name"/>
                <field name="event_type"/>
                <field name="partner_ref"/>
                <field name="partner_id"/>
                <field name="sale_order_id"/>
                <field name="state"/>
                <field name="error_type"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <filter string="Patient Sync" name="patient" domain="[('event_type', '=', 'patient')]"/>
                <filter string="Test Order" name="test_order" domain="[('event_type', '=', 'test_order')]"/>
                <separator/>
                <filter string="Needs Retry" name="needs_retry" 
                        domain="['|', ('next_retry_date', '&lt;=', context_today()), ('next_retry_date', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Event Type" name="group_event_type" context="{'group_by': 'event_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Error Type" name="group_error_type" context="{'group_by': 'error_type'}"/>
                    <filter string="Created Date" name="group_create_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_openelis_failed_event" model="ir.actions.act_window">
        <field name="name">Failed Sync Events</field>
        <field name="res_model">openelis.failed.event</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1, 'create': False, 'edit': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No failed events found!
            </p>
            <p>
                Failed events are automatically created when sync attempts to OpenELIS fail.
                You can retry them manually or wait for automatic retry.
            </p>
        </field>
    </record>

    <!-- Menu item moved to separate file (menu_failed_events.xml) to load after groups -->

    <record id="action_retry_selected_events" model="ir.actions.server">
        <field name="name">Retry Selected Events</field>
        <field name="model_id" ref="model_openelis_failed_event"/>
        <field name="binding_model_id" ref="model_openelis_failed_event"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if record.state != 'success':
                    record.action_retry()
        </field>
    </record>

</odoo>
