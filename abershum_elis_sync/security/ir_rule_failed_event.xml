<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record Rule: Only Bahmni App Admin can access failed events -->
        <record id="openelis_failed_event_rule_admin" model="ir.rule">
            <field name="name">OpenELIS Failed Event: Admin Only</field>
            <field name="model_id" ref="model_openelis_failed_event"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <!-- Made global for debugging/access -->
            <!-- <field name="groups" eval="[(4, ref('group_bahmni_app_admin'))]"/> -->
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
