<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_radiology" model="ir.ui.view">
        <field name="name">product.template.form.radiology</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_radiology"/>
                    <label for="is_radiology"/>
                </span>
            </xpath>
        </field>
    </record>

    <record id="product_normal_form_view_radiology" model="ir.ui.view">
        <field name="name">product.product.form.radiology</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_radiology"/>
                    <label for="is_radiology"/>
                </span>
            </xpath>
        </field>
    </record>

    <!-- Server Action to Mark as Radiology -->
    <record id="action_mark_as_radiology" model="ir.actions.server">
        <field name="name">Mark as Radiology Product</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="code">
            for record in records:
                record.write({'is_radiology': True})
        </field>
    </record>
</odoo>
