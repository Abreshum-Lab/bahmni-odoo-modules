<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_radiology">
        <field name="name">Radiology</field>
        <field name="description">Helps you manage radiology orders and reports.</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_radiology_assistant" model="res.groups">
        <field name="name">Radiology Assistant</field>
        <field name="category_id" ref="module_category_radiology"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_radiologist" model="res.groups">
        <field name="name">Radiologist</field>
        <field name="category_id" ref="module_category_radiology"/>
        <field name="implied_ids" eval="[(4, ref('group_radiology_assistant'))]"/>
    </record>
</odoo>
