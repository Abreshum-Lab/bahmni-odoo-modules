<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_orthanc_cancel_wizard_form" model="ir.ui.view">
        <field name="name">orthanc.cancel.wizard.form</field>
        <field name="model">orthanc.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Radiology Order">
                <group>
                    <field name="reason" placeholder="Please provide a reason for cancelling this order..."/>
                </group>
                <footer>
                    <button name="action_confirm_cancel" string="Confirm Cancellation" type="object" class="btn-danger"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_orthanc_cancel_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Order</field>
        <field name="res_model">orthanc.cancel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
